@model IEnumerable<JRMarketing.Gui.Models.Restaurantes>

@{
    ViewData["Title"] = "Agregar Restaurante";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<link href="~/css/Sesion/style.css" rel="stylesheet" />
<h2 style="margin-left: 30px; margin-top: 50px; font-weight: bold">Lista de Restuarantes</h2>
<table class="table table-align">
    <thead>
        <tr>
            <th>
                ID 
            </th>
            <th>
                Nombre del Restaurante
            </th>
            <th>
                Estado
            </th>
            <th>
                Ciudad
            </th>
            <th>
                Imagen
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreRestaurante)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CiudadR)
                </td>
                <td>
                    <img id="publicacion" src="~/myimages/@item.FotografiaR"/>
                </td>
                <td>                    
                    <a asp-controller="Restaurante" asp-route-Id="@item.Id" asp-action="Update" class="edit" title="Editar" data-toggle="tooltip"><i class="material-icons">Detalles/Editar</i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    #publicacion {
        width: 350px;
        height: auto;
    }
</style>
